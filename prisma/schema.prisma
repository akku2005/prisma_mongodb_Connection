datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String @unique
  password  String
  posts Post[]
}
model Post {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String
  title     String
  author    User    @relation(fields: [authorId],references: [id])
  authorId  String @db.ObjectId
}

enum Role {
  USER
  ADMIN
}